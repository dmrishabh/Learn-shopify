<style>
  {% for block in section.blocks %}
      label.swatch--{{ block.settings.name | handle }} {
          background:{{ block.settings.color }};
      }
  {% endfor %}
</style>

{% schema %}
{
  "name": "Swatch",
  "settings": [
    {
      "type": "header",
      "content": "Add color swathces in blocks"
    }
  ],
  "blocks": [
    {
      "type": "Swatch",
      "name": "Swatch",
      "settings": [
        {
          "type": "text",
          "id": "name",
          "label": "Color name"
        },
        {
          "type": "color_background",
          "id": "color",
          "label": "Color"
        }
      ]
    }
  ]
}
{% endschema %}
